#include <Servo.h>

Servo myservo; 
//int pos = 0;
const int Servo = 1;
const int buttonPin = 2;
//int servoVal;
int LEDa = 10;
int LEDb = 11;
int LEDc = 12;
int LEDd = 13;


void setup() {
myservo.attach(9);
pinMode(buttonPin, INPUT);
pinMode(LEDa, OUTPUT);
pinMode(LEDb, OUTPUT);
pinMode(LEDc, OUTPUT);
pinMode(LEDd, OUTPUT);

}

void loop() {
//servoVal = analogRead(Servo);
//Serial.println(servoVal);


  if (digitalRead(buttonPin) == HIGH) {
myservo.write(0);
digitalWrite(LEDa, HIGH);
digitalWrite(LEDb, HIGH);
digitalWrite(LEDc, HIGH);
digitalWrite(LEDd, HIGH);
  } else {
myservo.write(90);
digitalWrite(LEDa, LOW);
digitalWrite(LEDb, LOW);
digitalWrite(LEDc, LOW);
digitalWrite(LEDd, LOW);
  }
}

